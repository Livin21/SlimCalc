<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff325e7b">

    <Button
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:text="1"
    android:textSize="40dp"
        android:id="@+id/button9"
        android:layout_above="@+id/button2"
        android:layout_toLeftOf="@+id/button10"
        android:layout_toStartOf="@+id/button10"
        android:backgroundTint="#ffc8c28b"
        android:background="#ff90605a"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="2"
        android:textSize="40dp"
        android:id="@+id/button10"
        android:backgroundTint="#ffc8c28b"
        android:background="#ff90605a"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:layout_alignBottom="@+id/button8"
        android:layout_marginBottom="-2dp"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="3"
        android:textSize="40dp"
        android:id="@+id/button8"
        android:layout_above="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#ffc8c28b"
        android:background="#ff90605a"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="4"
        android:textSize="40dp"
        android:id="@+id/button11"
        android:layout_above="@+id/button9"
        android:layout_toLeftOf="@+id/button6"
        android:layout_toStartOf="@+id/button6"
        android:backgroundTint="#ffc8c28b"
        android:background="#ff90605a"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="5"
        android:textSize="40sp"
        android:id="@+id/button6"
        android:layout_above="@+id/button10"
        android:layout_toLeftOf="@+id/button8"
        android:layout_toStartOf="@+id/button8"
        android:backgroundTint="#ffc8c28b"
        android:background="#ff90605a"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="6"
        android:textSize="40dp"
        android:id="@+id/button7"
        android:layout_alignTop="@+id/button6"
        android:layout_toRightOf="@+id/button6"
        android:layout_toEndOf="@+id/button6"
        android:backgroundTint="#ffc8c28b"
        android:background="#ff90605a"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="7"
        android:textSize="40dp"
        android:id="@+id/button5"
        android:layout_alignTop="@+id/button3"
        android:layout_toLeftOf="@+id/button10"
        android:layout_toStartOf="@+id/button10"
        android:backgroundTint="#ffc8c28b"
        android:background="#ff90605a"
         />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="8"
        android:textSize="40dp"
        android:id="@+id/button4"
        android:layout_alignTop="@+id/button3"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3"
        android:backgroundTint="#ffc8c28b"
        android:background="#ff90605a"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="9"
        android:textSize="40dp"
        android:id="@+id/button3"
        android:layout_above="@+id/button7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#ffc8c28b"
        android:background="#ff90605a"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:paddingTop="10dp"
        android:text="0"
        android:textSize="40dp"
        android:id="@+id/button2"
        android:backgroundTint="#ffc8c28b"
        android:background="#ff90605a"
        android:layout_alignTop="@+id/button"
        android:layout_toRightOf="@+id/button12"
        android:layout_toEndOf="@+id/button12"
        android:layout_marginTop="2dp"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="="
        android:textSize="40dp"
        android:id="@+id/button"
        android:backgroundTint="#ff70c839"
        android:background="#ff32c854"
        android:layout_marginTop="2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false" />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="."
        android:textSize="40dp"
        android:id="@+id/button12"
        android:layout_alignLeft="@+id/button9"
        android:layout_alignStart="@+id/button9"
        android:layout_below="@+id/button9"
        android:layout_toLeftOf="@+id/button10"
        android:layout_toStartOf="@+id/button10" />
    <Button
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:text="+"
        android:textSize="40dp"
        android:layout_alignTop="@+id/button5"
        android:layout_alignRight="@+id/button15"
        android:layout_alignEnd="@+id/button15"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true" />
    <Button
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:text="-"
        android:textSize="40dp"
        android:layout_below="@+id/button5"
        android:layout_alignRight="@+id/button14"
        android:layout_alignEnd="@+id/button14"
        android:id="@+id/button15"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:text="x"
        android:textSize="40dp"
        android:layout_below="@+id/button11"
        android:layout_alignRight="@+id/button13"
        android:layout_alignEnd="@+id/button13"
        android:id="@+id/button14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:text="/"
        android:textSize="40dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button12"
        android:id="@+id/button13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button5"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3"
        android:hint="0"
        android:autoText="false"
        android:layout_alignParentTop="true"
        android:background="#ff325e7b"
        android:backgroundTint="#ff789dc8" />


</RelativeLayout>
